{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "ignorePaths": ["**/ui/**"],
  "regexManagers": [
    {
      "fileMatch": ["build-images.sh"],
      "matchStrings": [
        "\\bdocker\\.io/pihole/pihole::(?<currentValue>[-0-9\\.a-z]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
